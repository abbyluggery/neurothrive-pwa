<body>
    <div class="callback-container">
        <div class="spinner"></div>
        <h1>Authenticating...</h1>
        <p>Processing your Salesforce login. Please wait.</p>
        <div id="status"></div>
    </div>

    <!-- Load configuration -->
    <script src="../js/config.js"></script>

    <!-- Load Salesforce API (which handles the callback) -->
    <script src="../js/salesforce-api.js"></script>

    <script>
        // Handle OAuth callback
        (async function() {
            const statusDiv = document.getElementById('status');

            try {
                // The salesforceAPI automatically handles callbacks when URL contains 'code='
                // We just need to wait for it to complete

                // Check if there's an error parameter
                const params = new URLSearchParams(window.location.search);
                const error = params.get('error');
                const errorDescription = params.get('error_description');

                if (error) {
                    throw new Error(`OAuth Error: ${error}\n${errorDescription || ''}`);
                }

                // Wait a moment for the callback handler to complete
                await new Promise(resolve => setTimeout(resolve, 2000));

                // Check if authentication succeeded
                if (salesforceAPI.isAuthenticated()) {
                    document.querySelector('.spinner').style.display = 'none';
                    document.querySelector('h1').textContent = 'Authentication Successful!';
                    document.querySelector('p').innerHTML = '<span class="success">✓ You have successfully logged in to Salesforce.</span>';

                    statusDiv.innerHTML = `
                        <p class="redirect-info">Redirecting to NeuroThrive in 2 seconds...</p>
                        <a href="../index.html" class="btn">Go to NeuroThrive Now</a>
                    `;

                    // Redirect after 2 seconds
                    setTimeout(() => {
                        window.location.href = '../index.html';
                    }, 2000);
                } else {
                    throw new Error('Authentication completed but token not found. Please try again.');
                }

            } catch (e) {
                console.error('OAuth callback error:', e);

                document.querySelector('.spinner').style.display = 'none';
                document.querySelector('h1').textContent = 'Authentication Failed';
                document.querySelector('p').innerHTML = '<span class="error">✗ There was a problem logging in.</span>';

                statusDiv.innerHTML = `
                    <div class="error-details">
                        <pre>${e.message}</pre>
                    </div>
                    <a href="../index.html" class="btn">Return to NeuroThrive</a>
                `;
            }
        })();
    </script>
</body>
</html>
